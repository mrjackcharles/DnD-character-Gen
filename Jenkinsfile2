pipeline {
    environment {
        registry = "jackcharles13/dndproject"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
        }

    agent any
    stages {
        stage('Cloning our Git') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mrjackcharles/dnd-character-gen.git'
            }
        }

    stage('Building our image') {
        steps{
            sh 'docker-compose up -d'
                }
           }

    stage('Deploy our image') {
        steps{
             sh 'docker login --username=jackcharles13 --email=jack-charles-8@hotmail.com'
             sh 'docker push jackcharles13/dnd-pipeline_frontend:latest'
                }
           }
      }
}
