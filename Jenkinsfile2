pipeline {
    environment {
        registry = "jackcharles13/dndproject"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
        }

    agent any
    stages {
        stage('Cloning our Git') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mrjackcharles/dnd-character-gen.git'
            }
        }

    stage('Building our image') {
        steps{
            sh 'sudo docker-compose up'
                }
           }
      }
}       
