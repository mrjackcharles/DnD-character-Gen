pipeline {
    environment {
        registry = "jackcharles13/dndproject"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Repo') {
            steps {
                echo 'Cloning....'
                git 'https://github.com/mrjackcharles/dnd-character-gen.git'  
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'docker compose up'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
